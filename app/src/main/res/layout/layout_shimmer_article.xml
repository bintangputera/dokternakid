<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:contentPadding="@dimen/dimen_8dp"
    app:cardElevation="@dimen/dimen_4dp"
    android:layout_marginVertical="@dimen/dimen_8dp"
    android:layout_marginStart="@dimen/dimen_8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvThumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dimen_10dp">

            <ImageView
                android:id="@+id/imgThumbnail"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@color/colorGreyDivider" />

        </com.google.android.material.card.MaterialCardView>

        <View
            android:id="@+id/tvDate"
            tools:text="06 September 2022"
            android:layout_width="140dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginHorizontal="@dimen/dimen_8dp"
            android:background="@color/colorGreyDivider"
            style="@style/DokternakTextStyle.Body3"/>

        <View
            android:id="@+id/tvCategory"
            tools:text="Sport"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginHorizontal="@dimen/dimen_8dp"
            android:background="@color/colorGreyDivider"
            style="@style/DokternakTextStyle.Header3.Grey"/>

        <View
            android:id="@+id/tvTitle"
            tools:text="@tools:sample/lorem/random"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:maxLines="2"
            android:minLines="2"
            android:ellipsize="end"
            android:layout_marginHorizontal="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:background="@color/colorGreyDivider"
            style="@style/DokternakTextStyle.SemiBold.Body2.DarkBlue"/>

        <View
            android:id="@+id/tvAuthor"
            android:layout_width="80dp"
            android:layout_height="10dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginHorizontal="@dimen/dimen_8dp"
            tools:text="Pevita P"
            android:background="@color/colorGreyDivider"
            style="@style/DokternakTextStyle.SemiBold.Body2.DarkBlue"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>